{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",

		/* Path Alias */
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"~build/*": ["src/build/*"],
			"~lib/tasks/*": ["src/lib/tasks/*"],
			"~lib/conversions/*": ["src/lib/conversions/*"],
			"~lib/transforms/*": ["src/lib/transforms/*"],
			"~lib/utils/*": ["src/lib/utils/*"],
			"~types/*": ["src/types/*"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
